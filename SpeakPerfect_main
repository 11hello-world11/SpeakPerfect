  <!-- JavaScript -->
  <script>
    // 移动端菜单切换
    const menuToggle = document.getElementById('menuToggle');
    const mobileMenu = document.getElementById('mobileMenu');
    
    menuToggle.addEventListener('click', () => {
      if (mobileMenu.classList.contains('h-0')) {
        mobileMenu.classList.remove('h-0');
        mobileMenu.classList.add('h-auto');
      } else {
        mobileMenu.classList.add('h-0');
        mobileMenu.classList.remove('h-auto');
      }
    });
    
    // 导航栏滚动效果
    const navbar = document.getElementById('navbar');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        navbar.classList.add('py-2', 'shadow');
        navbar.classList.remove('py-3');
      } else {
        navbar.classList.add('py-3');
        navbar.classList.remove('py-2', 'shadow');
      }
    });
    
    // 录音功能模拟
    const startRecord = document.getElementById('startRecord');
    const stopRecord = document.getElementById('stopRecord');
    const playRecord = document.getElementById('playRecord');
    const recordingStatus = document.getElementById('recordingStatus');
    const recordDuration = document.getElementById('recordDuration');
    const recordingIndicator = document.getElementById('recordingIndicator');
    const pulseRing = document.getElementById('pulseRing');
    
    let recording = false;
    let recordTime = 0;
    let timer;
    
    // 录音动画
    function startPulseAnimation() {
      pulseRing.classList.add('animate-pulse-slow');
      pulseRing.classList.remove('scale-0', 'opacity-0');
      pulseRing.classList.add('scale-100', 'opacity-100');
    }
    
    function stopPulseAnimation() {
      pulseRing.classList.remove('animate-pulse-slow');
      pulseRing.classList.add('scale-0', 'opacity-0');
      pulseRing.classList.remove('scale-100', 'opacity-100');
    }
    
    // 格式化时间
    function formatTime(seconds) {
      const mins = Math.floor(seconds / 60);
      const secs = seconds % 60;
      return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
    }
    
    startRecord.addEventListener('click', () => {
      recording = true;
      startRecord.classList.add('hidden');
      stopRecord.classList.remove('hidden');
      recordingStatus.classList.remove('hidden');
      
      // 开始录音动画
      recordingIndicator.classList.remove('bg-primary/10');
      recordingIndicator.classList.add('bg-danger/10');
      recordingIndicator.querySelector('i').classList.remove('text-primary');
      recordingIndicator.querySelector('i').classList.add('text-danger');
      startPulseAnimation();
      
      // 计时
      recordTime = 0;
      recordDuration.textContent = formatTime(recordTime);
      timer = setInterval(() => {
        recordTime++;
        recordDuration.textContent = formatTime(recordTime);
      }, 1000);
    });
    
    stopRecord.addEventListener('click', () => {
      recording = false;
      clearInterval(timer);
      stopRecord.classList.add('hidden');
      playRecord.classList.remove('hidden');
      
      // 停止录音动画
      stopPulseAnimation();
      recordingIndicator.classList.add('bg-primary/10');
      recordingIndicator.classList.remove('bg-danger/10');
      recordingIndicator.querySelector('i').classList.add('text-primary');
      recordingIndicator.querySelector('i').classList.remove('text-danger');
    });
    
    playRecord.addEventListener('click', () => {
      // 模拟播放录音
      playRecord.innerHTML = '<i class="fa fa-pause mr-2"></i>暂停播放';
      
      setTimeout(() => {
        playRecord.innerHTML = '<i class="fa fa-play mr-2"></i>播放录音';
      }, 3000);
    });
    
    // 进度图表
    const ctx = document.getElementById('progressChart').getContext('2d');
    const progressChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['周一', '周二', '周三', '周四', '周五', '周六', '周日'],
        datasets: [{
          label: '发音评分',
          data: [65, 68, 72, 69, 75, 78, 78],
          borderColor: '#4F46E5',
          backgroundColor: 'rgba(79, 70, 229, 0.1)',
          tension: 0.3,
          fill: true
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: false,
            min: 50,
            max: 100,
            ticks: {
              stepSize: 10
            }
          }
        },
        plugins: {
          legend: {
            display: false
          }
        }
      }
    });
  </script>
</body>
</html>
